{
  "name": "ilebora/core-slim-sec",
  "description": "Production distribution of the BoraSlim framework core.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "ILEBORA Technologies",
      "email": "support@ilebora.com",
      "homepage": "https://ilebora.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "BoraSlim\\": "src/"
    },
    "files": [
      "CoreDefaults.php",
      "Helpers.php",
      "app.php"
    ]
  },
  "require": {
    "php": ">=8.1",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "post-install-cmd": [
      "@composer dump-autoload -o"
    ],
    "post-update-cmd": [
      "@composer dump-autoload -o"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}
