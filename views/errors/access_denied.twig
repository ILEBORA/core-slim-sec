<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=0,viewport-fit=cover">
    <title>Access Denied</title>
    <base href="{{base_url}}">
    <link rel="shortcut icon" type="image/x-icon" href="assets/images/branding/favicon.ico">
    <meta name="description" content="{{ meta_description }}">
    <meta name="keywords" content="{{ meta_keywords }}">
    <meta name="author" content="{{ meta_author }}">
    <meta name="robots" content="{{ meta_robots }}">

    <link rel="canonical" href="{{ canonical_url }}">

    {# Optional Open Graph tags for social media sharing #}
    <meta property="og:title" content="{{ page_title ~ ' | ' ~ app_name }}">
    <meta property="og:description" content="{{ meta_description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:site_name" content="{{ app_name }}">
    
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 60px;
        }
        .notice {
            display: inline-block;
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 20px 40px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,.1);
        }
        .notice h1 {
            margin-top: 0;
            font-size: 28px;
        }
        .redirect {
            margin-top: 15px;
            font-size: 14px;
            color: #555;
        }
        .btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background: #007BFF;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            transition: background .2s;
        }
        .btn:hover {
            background: #0056b3;
        }
    </style>
</head>
<body>
    <div class="notice">
        <h1>ðŸš« Access Denied</h1>
        <p>You do not have permission to view this page.</p>
        <div class="redirect">
            Redirecting you to the homepage in 
            <span id="countdown">{{ redirectDelay / 1000 }}</span> seconds...
        </div>
        <a href="{{ redirectUrl }}" class="btn" onclick="redirectTo('{{ redirectUrl }}',true); return false;">
            Go Back to Home
        </a>
    </div>

    <script>
        let countdown = {{ redirectDelay / 1000 }};
        let countdownEl = document.getElementById('countdown');
        let redirectUrl = "{{ redirectUrl }}";

        function redirectTo(url, force = false) {
            if (force) {
                // Replace current history entry with the new URL
                window.location.replace(url);
            } else {
                // Normal redirect, adds to history
                window.location.href = url;
            }
            return false;
        }

        let timer = setInterval(() => {
            countdown--;
            if (countdownEl) countdownEl.textContent = countdown;
            if (countdown <= 0) {
                clearInterval(timer);
                redirectTo(redirectUrl, true);
            }
        }, 1000);
    </script>
</body>
</html>
