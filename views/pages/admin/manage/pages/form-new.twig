<form id="createPageForm" action="bo/manage/pages/add" onsubmit="event.preventDefault();addPage(event)" method="POST">
    {% if parent_id %}
        <input type="hidden" name="parent_id" value="{{ parent_id }}">
    {% endif %}

    <div>
        <label>Title:</label>
        <input type="text" name="title" required>
    </div>

    <div>
        <label>Slug:</label>
        <input type="text" name="slug" required placeholder="e.g. help/faq">
    </div>

    <div>
        <label>Show in Footer:</label>
        <input type="checkbox" name="show_in_footer" value="1">
    </div>

    <div>
        <button type="submit">Create Page</button>
    </div>
</form>

<style>
form div {
    margin-bottom: 10px;
}
input[type="text"] {
    width: 100%;
    padding: 6px;
}
</style>
