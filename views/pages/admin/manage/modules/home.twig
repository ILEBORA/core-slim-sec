{% set title = (page_title|default('Manage Modules')) ~ ' | ' ~ app_name %}
{% extends 'layouts/admin.twig' %}

{% block content %}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{% include "partials/admin/breadcrumb.twig" %}


<table>
  <thead><tr><th>Name</th><th>Enabled</th><th>Actions</th></tr></thead>
  <tbody>
  {% for module in items %}
    <tr>
      <td>{{ module.name }}</td>
      <td>{{ module.enabled ? 'Yes' : 'No' }}</td>
      <td><a class="jx" href="bo/manage/modules/{{ module.name|lower }}">Manage</a></td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}